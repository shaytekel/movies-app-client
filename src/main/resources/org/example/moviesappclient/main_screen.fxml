<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.moviesappclient.controller.MainController">

    <!-- Background image -->
    <ImageView fitHeight="1080" fitWidth="1920" preserveRatio="true">
        <Image url="https://getwallpapers.com/wallpaper/full/1/b/d/829640-gorgerous-movie-backgrounds-1920x1080-ipad-pro.jpg" />
    </ImageView>

    <VBox alignment="CENTER" prefHeight="822.0" prefWidth="1617.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label style="-fx-font-size: 24px;" text="Movie Store Application" textFill="#f2e9e9fc" />

        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#openAddMovie" text="Add Movie" />
            <Button onAction="#openDeleteMovie" text="Delete Movie" />
            <Button onAction="#openBuyMovie" text="Buy Movie" />
            <Button onAction="#openSearchByID" text="Search Movie by ID" />
            <Button onAction="#openSearchByName" text="Search Movie by Name" />
        </HBox>

        <!-- Container for functionality screens -->
        <StackPane alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <!-- Placeholder for the functionality screens -->
            <Pane fx:id="functionalityPane" prefHeight="858.0" prefWidth="1819.0" VBox.vgrow="ALWAYS">
                <effect>
                    <Blend />
                </effect></Pane>
        </StackPane>
    </VBox>

</StackPane>
